@model NaderCms.Models.Term

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TermId" />        

            <div class="form-group">
                <label asp-for="TermName" class="control-label"></label>
                <input asp-for="TermName" class="form-control" />
                <span asp-validation-for="TermName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TermCode" class="control-label"></label>
                <input asp-for="TermCode" class="form-control" />
                <span asp-validation-for="TermCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxonomyId" class="control-label"></label>
                <select asp-for="TaxonomyId" class="form-control" asp-items="@ViewBag.taxonomies">
                    
                </select>
                <span asp-validation-for="TaxonomyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
