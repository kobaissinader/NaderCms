@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<p>
    <a asp-action="Create"><button class="btn btn-primary">Create New</button></a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td user-role = "@role.Id">users for this role</td>
                <td users for this role"></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                    <a class="confirmDeletion" asp-action="Delete" asp-route-roleId="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
