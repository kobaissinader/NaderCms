@model NaderCms.Models.Taxonomy

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TaxonomyId" />
            
            <div class="form-group">
                <label asp-for="TaxonomyName" class="control-label"></label>
