@model UserWebsite.Models.IndexViewModel


@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid paddding mb-5">
    <div class="row mx-0">
        <div class="col-md-6 col-12 paddding animate-box" data-animate-effect="fadeIn">
           <div class="fh5co_suceefh5co_height">
                <img src="/images/@Model.lastFivePosts[0].Image" alt="img" />
                <div class="fh5co_suceefh5co_height_position_absolute"></div>
                <div class="fh5co_suceefh5co_height_position_absolute_font">
                    <div class="">
                        <a href="#" class="color_fff">
                            <i class="fa fa-clock-o"></i>&nbsp;&nbsp;@Model.lastFivePosts[0].PostCreatoinDate
                        </a>
                    </div>
                    <div class=""><a class="fh5co_good_font" asp-controller="UserHome" asp-action="SinglePost" asp-route-postId="@Model.lastFivePosts[0].PostId"> @Model.lastFivePosts[0].PostTitle </a></div>
                </div>
           </div>
        </div>
            <div class="col-md-6">
                <div class="row">
                    @for( int item = 1; item < Model.lastFivePosts.Count(); item++ )
                    {
                    <div class="col-md-6 col-6 paddding animate-box" data-animate-effect="fadeIn">
                        <div class="fh5co_suceefh5co_height_2">
                        <img src="/images/@Model.lastFivePosts[item].Image" alt="img" />
                            <div class="fh5co_suceefh5co_height_position_absolute"></div>
                            <div class="fh5co_suceefh5co_height_position_absolute_font_2">
                                <div class="">
                                    <a href="#" class="color_fff">
                                    <i class="fa fa-clock-o"></i>&nbsp;&nbsp;@Model.lastFivePosts[item].PostCreatoinDate
                                    </a>
                                </div>
                                <div class=""><a class="fh5co_good_font_2" asp-controller="UserHome" asp-action="SinglePost" asp-route-postId="@Model.lastFivePosts[item].PostId">@Model.lastFivePosts[item].PostTitle</a></div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
    </div>
    </div>
<div class="container-fluid pt-3">
    <div class="container animate-box" data-animate-effect="fadeIn">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">@ViewBag.NewestPostType.PostTypeTitle</div>
        </div>
        <div class="owl-carousel owl-theme js" id="slider1">
            @foreach (var i in ViewBag.NewestPostTypePosts)
            {
                <div class="item px-2">
                    <div class="fh5co_latest_trading_img_position_relative">
                    <div class="fh5co_latest_trading_img"><img src="/images/@i.Image" alt=""
                                                           class="fh5co_img_special_relative"/></div>
                    <div class="fh5co_latest_trading_img_position_absolute"></div>
                    <div class="fh5co_latest_trading_img_position_absolute_1">
                            <a asp-controller="UserHome" asp-action="SinglePost" asp-route-postId="@i.PostId" class="text-white"> @i.PostTitle </a>
                            <div class="fh5co_latest_trading_date_and_name_color"> @i.PostCreatoinDate</div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div> 
</div>
<div class="container-fluid fh5co_video_news_bg pb-4">
    <div class="container animate-box" data-animate-effect="fadeIn">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom pt-5 pb-2 mb-4  text-black">@ViewBag.SecondNewestPostType.PostTypeTitle</div>
        </div>
       
            <div class="owl-carousel owl-theme" id="slider3">
            @foreach (var i in ViewBag.SecondNewestPostTypePosts)
            {
                <div class="item px-2">
                    <div class="fh5co_hover_news_img">
                        <div class="fh5co_latest_trading_img">
                            <img src="/images/@i.Image" alt=""
                             class="fh5co_img_special_relative" />
                        </div>
                        <div class="pt-2">
                            <a asp-controller="UserHome" asp-action="SinglePost" asp-route-postId="@i.PostId" class="link-secondary">
                                    <span class="h5">@i.PostTitle </span>
                                </a>
                                <div class="c_g"><i class="fa fa-clock-o"></i>@i.PostCreatoinDate</div>
                        </div>
                    </div>
                </div>
               }
            </div>         
    </div>
</div>

<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">@ViewBag.ThirdNewestPostType.PostTypeTitle</div>
                @foreach (var i in ViewBag.ThirdNewestPostTypePosts)
                {
            
                    <div class="row pb-4">
                        <div class="col-md-5">
                            <div class="fh5co_hover_news_img">
                                <div class="fh5co_news_img"><img src="/images/@i.Image" alt=""/></div>
                                <div></div>
                            </div>
                        </div>
                        <div class="col-md-7 animate-box">
                            <a asp-controller="UserHome" asp-action="SinglePost" asp-route-postId="@i.PostId" class="fh5co_magna py-2"> @i.PostTitle </a>
                            <a href="single.html" class="fh5co_mini_time py-3"> @i.PostCreatoinDate </a>
                            <div class="fh5co_consectetur"> @i.PostDetials
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Terms</div>
                </div>
                <div class="clearfix"></div>
                <div class="fh5co_tags_all">
                    @foreach (var i in Model.indexTerms)
                    {
                        <a  class="fh5co_tagg" asp-controller="UserHome" asp-action="TermIndex" asp-route-TermId="@i.TermId">@i.TermName</a>

                    }
                </div>
            </div>
        </div>
    </div>
</div> 
