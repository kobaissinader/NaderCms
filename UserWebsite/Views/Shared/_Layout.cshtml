@model UserWebsite.Models.IndexViewModel

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/css/media_query.css" rel="stylesheet" type="text/css" />
    <link href="~/css/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/css/css/animate.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="~/css/css/owl.carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/css/css/owl.theme.default.css" rel="stylesheet" type="text/css" />
    <!-- Bootstrap CSS -->
    <link href="~/css/css/style_1.css" rel="stylesheet" type="text/css" />
    <!-- Modernizr JS -->
    <script src="~/js/modernizr-3.5.0.min.js"></script>
</head>
<body>
    
    <div class="container-fluid bg-faded fh5co_padd_mediya padding_786">
    <div class="container padding_786">
        <nav class="navbar navbar-toggleable-md navbar-light ">
            <button class="navbar-toggler navbar-toggler-right mt-3" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation"><span class="fa fa-bars"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                   
                    <li class="nav-item active">
                            <a class="nav-link" asp-controller="UserHome" asp-action="Index" >Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdownMenuButton3" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Taxonomies<span class="sr-only">(current)</span></a>
                           @using NaderCms.Infrastructure
                                @inject NaderCmsContext context
                                @{
                                    var taxonomiesList =  context.Taxonomies.OrderByDescending(x => x.TaxonomyId).Take(6).ToList();
                                    //var LastThreePostsSharedLayout = context.PostTypes.OrderByDescending(x => x.PostTypeId).Take(3).ToList();
                                    var LastThreePostsSharedLayout =  context.Posts.OrderByDescending(x => x.PostId).Take(3).ToList();
                            }

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink_1">
                                


                                @foreach (var i in taxonomiesList)
                            {
                                    <a class="dropdown-item" asp-controller="UserHome" asp-action="TaxonomyIndex" asp-route-TaxonomyId="@i.TaxonomyId">@i.TaxonomyName</a>
                            }
                        </div>
                    </li>
                    <li class="nav-item ">
                            <a class="nav-link" asp-controller="UserHome" asp-action="Contact">Contact <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>
    <main role="main">
        @RenderBody()
    </main>

    <div class="container-fluid fh5co_footer_bg py-5 ">
        <dxxiv class="container animate-box mt-5">
            <div class="row justify-content-md-center">
                <div class="clearfix"></div>
                <div class="col-12 col-md-4 col-lg-3">
                    <div class="footer_main_title py-3"> About</div>
                    <div class="footer_sub_about pb-3">
                        The Lebanon News is an Lebanese daily newspaper, founded and continuously published in Beirut since September 18,
                        1851. It has won 112 Pulitzer Prizes, more than any other news organization. Its website is one of Lebanon’s most popular news sites,
                        and the most popular among all the nation’s newspapers,
                        receiving more than 30 million unique visitors per month as reported in January 2011.
                    </div>
                </div>
                <div class="col-12 col-md-3 col-lg-2">
                    <div class="footer_main_title py-3"> Taxonomies</div>
                    <ul class="footer_menu">
                        @foreach (var i in taxonomiesList)
                        {
                            <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; @i.TaxonomyName</a></li>

                        }
                    </ul>
                </div>
                <div class="col-12 col-md-5 col-lg-3 position_footer_relative">
                    <div class="footer_main_title py-3"> Last Added Posts</div>
                    @foreach (var i in LastThreePostsSharedLayout)
                    {
                        <div class="footer_makes_sub_font"> @i.PostCreatoinDate</div>
                        <a href="#" class="footer_post pb-4"> @i.PostTitle </a>
                    }
                    <div class="footer_position_absolute"><img src="~/Media/images/footer_sub_tipik.png" alt="img" class="width_footer_sub_img" /></div>
                </div>
            </div>
        </dxxiv>
    </div>
    <div class="container-fluid fh5co_footer_right_reserved">
        <div class="container">
            <div class="row  ">
                <div class="col-12 col-md-6 py-4 Reserved"> © Copyright 2022, All rights reserved. Design by <a href="http://recursivesolutions.org/" title="Free HTML5 Bootstrap templates">recursivesolutions</a>. </div>
            </div>
        </div>

        <div class="gototop js-top">
            <a href="#" class="js-gotop"><i class="fa fa-arrow-up"></i></a>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="~/js/owl.carousel.min.js"></script>
        <!--<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"
                integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb"
                crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"
                integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn"
                crossorigin="anonymous"></script>
        <!-- Waypoints -->
        <script src="~/js/jquery.waypoints.min.js"></script>
        <!-- Main -->
        <script src="~/js/main.js"></script>
    </div>
</body>
</html>